<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="250.0" prefWidth="250.0" spacing="15" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Etiqueta y Campo de Texto para "Emulator Number" -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label styleClass="form-label" text="Emulator Number" />
    </HBox>
    <HBox alignment="CENTER">
        <TextField fx:id="textfieldEmulatorNumber" styleClass="form-field" HBox.hgrow="ALWAYS" />
    </HBox>
    
    <!-- Etiqueta y Campo de Texto para "Name" -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label styleClass="form-label" text="Name" />
    </HBox>
    <HBox alignment="CENTER">
        <TextField fx:id="textfieldProfileName" styleClass="form-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- BotÃ³n Alineado a la Derecha -->
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="buttonSaveProfile" onAction="#handleSaveProfileButton" styleClass="form-button" text="Save" />
    </HBox>
</VBox>
